
<!DOCTYPE html>
<html lang="en">

<!-- doccure/  30 Nov 2019 04:11:34 GMT -->
<head>

    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0">
    <title>Appointment Booking System - @ViewData["Title"]</title>

    <!-- Favicons -->
    <link type="image/x-icon" href="~/assets/img/favicon.png" rel="icon">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/assets/css/bootstrap.min.css">

    <!-- Fontawesome CSS -->
    <link rel="stylesheet" href="~/assets/plugins/fontawesome/css/fontawesome.min.css">
    <link rel="stylesheet" href="~/assets/plugins/fontawesome/css/all.min.css">

    <!-- Main CSS -->
    <link rel="stylesheet" href="~/assets/css/style.css">

    <!-- HTML5 shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!--[if lt IE 9]>
        <script src="assets/js/html5shiv.min.js"></script>
        <script src="assets/js/respond.min.js"></script>
    <![endif]-->

</head>
<body>

    <!-- Main Wrapper -->
    <div class="main-wrapper">

        <!-- Header -->
        <header class="header">
            <nav class="navbar navbar-expand-lg header-nav">
                <div class="navbar-header">
                    
                    <a asp-area="" asp-controller="Home" asp-action="Index">
                        <i class="fa fa-home"></i>
                    </a>
                </div>
                <div class="main-menu-wrapper">
                    

                    <div class="menu-header">

                        <a asp-area="" asp-controller="Home" asp-action="Index">
                            <img src="assets/img/logo.png" class="img-fluid" alt="Logo">
                        </a>
                        <a id="menu_close" class="menu-close" href="javascript:void(0);">
                            <i class="fas fa-times"></i>
                        </a>
                    </div>
                    <ul class="main-nav">

                        <li>

                            <a asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>

                        @if (User.IsInRole("Patient"))
                        {

                            <li>
                                <a asp-area="" asp-controller="Appointments" asp-action="Index">Appointments</a>

                            </li>
                            <li>
                                <a asp-area="" asp-controller="Feedbacks" asp-action="Create">Feedback</a>

                            </li>
                        }
                        @if (User.IsInRole("Doctor"))
                        {

                            <li>
                                <a asp-area="" asp-controller="DoctorAppointments" asp-action="Index">Appointments</a>

                            </li>
                            <li>
                                <a asp-area="" asp-controller="Feedbacks" asp-action="Create">Feedback</a>

                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {

                            <li class="has-submenu ">
                                <a asp-area="" asp-controller="AdminAppointments" asp-action="Index">
                                    Appointments
                                    <i class="fas fa-chevron-down"></i>
                                </a>
                                <ul class="submenu">
                                    <li><a asp-area="" asp-controller="AdminAppointments" asp-action="Create">Create an Appointment</a></li>
                                    <li><a asp-area="" asp-controller="AdminAppointments" asp-action="Index">View all Appointments</a></li>
                                    <li> <a asp-area="" asp-controller="EmailNotification" asp-action="Index">Send Appointment Notification</a></li>
                                </ul>
                            </li>
                            <li class="has-submenu ">
                                <a asp-area="" asp-controller="Doctors" asp-action="Index">
                                    Doctors
                                    <i class="fas fa-chevron-down"></i>
                                </a>
                                <ul class="submenu">
                                    <li><a asp-area="" asp-controller="Doctors" asp-action="Create">Create a Doctor</a></li>
                                    <li><a asp-area="" asp-controller="Doctors" asp-action="Index">View all Doctors</a></li>
                                </ul>
                            </li>
                            <li class="has-submenu ">
                                <a asp-area="" asp-controller="Patients" asp-action="Index">
                                    Patients
                                    <i class="fas fa-chevron-down"></i>
                                </a>
                                <ul class="submenu">
                                    <li><a asp-area="" asp-controller="Patients" asp-action="Create">Create a Patient</a></li>
                                    <li><a asp-area="" asp-controller="Patients" asp-action="Index">View all Patients</a></li>
                                </ul>
                            </li>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="has-submenu ">
                                <a asp-area="Identity" asp-page="/Account/AdminRegister">
                                    Account Registration
                                    <i class="fas fa-chevron-down"></i>
                                </a>
                                <ul class="submenu">
                                    <li>
                                        <a asp-area="Identity" asp-page="/Account/DoctorRegister">Register a Doctor</a>
                                    </li>
                                    <li>
                                        <a asp-area="Identity" asp-page="/Account/AdminRegister">Register an Admin</a>
                                    </li>
                                    <li>
                                        <a asp-area="Identity" asp-page="/Account/Register">Register a Patient</a>
                                    </li>
                                    <li>

                                        <a asp-area="" asp-controller="AccountEmailNotification" asp-action="Index">Account Notification</a>

                                    </li>
                                </ul>
                            </li>

                            <li class="has-submenu ">
                                <a asp-area="" asp-controller="QRs" asp-action="Index">
                                    Qr Codes
                                    Resources
                                    <i class="fas fa-chevron-down"></i>
                                </a>
                                <ul class="submenu">
                                    <li>
                                        <a asp-area="" asp-controller="QRs" asp-action="Index">QR Codes</a>
                                    </li>

                                    <li>
                                        <a asp-area="" asp-controller="Role" asp-action="Index">Role</a>
                                    </li>

                                    <li>
                                        <a asp-area="" asp-controller="Feedbacks" asp-action="Index">Feedback</a>
                                    </li>

                                </ul>
                            </li>


                        }

                        @if (User.IsInRole("Doctor"))
                        {<!--Use class has submenu when sending off for final submission to allow access to the different functions-->

                            <li>
                                <a asp-area="" asp-controller="Doctors" asp-action="Index">Doctors</a>
                            </li>
                            <li>
                                <a asp-area="" asp-controller="Patients" asp-action="Index">Patients</a>
                            </li>

                        }

                    </ul>
                </div>
                <ul class="nav header-navbar-rht">
                    <partial name="_LoginPartial" />
                </ul>
            </nav>
        </header>
        <!-- /Header -->

        @RenderBody()
        <style>
            footer-title{
                color:white;
            }
        </style>
        <!-- Footer -->
        <footer class="footer">

            <!-- Footer Top -->
            <div class="footer-top">
                <div class="container-fluid">
                    <div class="row">
                        <div class="col-lg-3 col-md-6">

                            <!-- Footer Widget -->
                            <div class="footer-widget footer-menu">
                                <div class="footer-logo">
                                    <h2 class="footer-title" color="White"> <a asp-area="" asp-controller="Home" asp-action="Index"> FYP Appointment Application</a></h2>
</div>
                                <div class="footer-about-content">
                                    <div class="social-icon">
                                        <ul>
                                            <li>
                                                <a href="Facebook.com" target="_blank"><i class="fab fa-facebook-f"></i> </a>
                                            </li>
                                            <li>
                                                <a href="Twitter.com" target="_blank"><i class="fab fa-twitter"></i> </a>
                                            </li>
                                            <li>
                                                <a href="LinkedIn.com" target="_blank"><i class="fab fa-linkedin-in"></i></a>
                                            </li>
                                            <li>
                                                <a href="Instagram.com" target="_blank"><i class="fab fa-instagram"></i></a>
                                            </li>
                                            <li>
                                                <a href="Dribble.com" target="_blank"><i class="fab fa-dribbble"></i> </a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                            </div>
                            <!-- /Footer Widget -->

                        </div>

                        <div class="col-lg-3 col-md-6">

                            <!-- Footer Widget -->
                            <div class="footer-widget footer-menu">
                                <h2 class="footer-title">Patients</h2>
                                <ul>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><a asp-area="" asp-controller="Patients" asp-action="Index"><i class="fas fa-angle-double-right"></i> All Patients</a></li>
                                        <li><a asp-area="" asp-controller="Patients" asp-action="Create"><i class="fas fa-angle-double-right"></i> Create a Patient</a></li>
                                        <li><a asp-area="Identity" asp-page="/Account/Register"><i class="fas fa-angle-double-right"></i> Register a patient account</a></li>
                                        <li><a asp-area="" asp-controller="AdminAppointments" asp-action="Create"><i class="fas fa-angle-double-right"></i> Book an Appointment</a></li>
                                        <li><a asp-area="" asp-controller="AdminAppointments" asp-action="Index"><i class="fas fa-angle-double-right"></i> View all Appointments</a></li>
                                    }
                                    @if (User.IsInRole("Doctor"))
                                    {
                                        <li><a asp-area="" asp-controller="DoctorAppointments" asp-action="Index"><i class="fas fa-angle-double-right"></i> View all Appointments</a></li>

                                    }
                                    @if (User.IsInRole("Patient"))
                                    {
                                        <li><a asp-area="" asp-controller="Appointments" asp-action="Index"><i class="fas fa-angle-double-right"></i> View all Appointments</a></li>

                                    }
                                    @if (User.IsInRole("Admin") || (User.IsInRole("Doctor")))
                                    {
                                        <li><a asp-area="" asp-controller="Patients" asp-action="Index"><i class="fas fa-angle-double-right"></i> All Patients</a></li>
                                    }

                                </ul>
                            </div>
                            <!-- /Footer Widget -->

                        </div>

                        <div class="col-lg-3 col-md-6">

                            <!-- Footer Widget -->
                            <div class="footer-widget footer-menu">
                                <h2 class="footer-title">Doctors</h2>
                                <ul>
                                    @if (User.IsInRole("Admin"))
                                    {
                                        <li><a asp-area="" asp-controller="Doctors" asp-action="Index"><i class="fas fa-angle-double-right"></i> View All Doctors</a></li>
                                        <li><a asp-area="" asp-controller="Doctors" asp-action="Create"><i class="fas fa-angle-double-right"></i> Create a Doctor</a></li>
                                        <li><a asp-area="Identity" asp-page="/Account/DoctorRegister"><i class="fas fa-angle-double-right"></i> Register a Doctor account</a></li>
                                        <li><a asp-area="" asp-controller="AdminAppointments" asp-action="Create"><i class="fas fa-angle-double-right"></i> Book an Appointment</a></li>
                                        <li><a asp-area="" asp-controller="AdminAppointments" asp-action="Index"><i class="fas fa-angle-double-right"></i> View all Appointments</a></li>
                                    }
                                    @if (User.IsInRole("Doctor"))
                                    {
                                        <li><a asp-area="" asp-controller="DoctorAppointments" asp-action="Index"><i class="fas fa-angle-double-right"></i> View all Appointments</a></li>

                                    }
                               
                                    @if (User.IsInRole("Admin") || (User.IsInRole("Doctor")))
                                    {
                                        <li><a asp-area="" asp-controller="Patients" asp-action="Index"><i class="fas fa-angle-double-right"></i> All Patients</a></li>
                                    }

                                </ul>
                            </div>
                            <!-- /Footer Widget -->

                        </div>

                        <div class="col-lg-3 col-md-6">

                            <!-- Footer Widget -->
                            @if (User.IsInRole("Admin"))
                            {
                                <div class="footer-widget footer-menu">
                                    <h2 class="footer-title">Resources</h2>
                                    <ul>

                                        <li><a asp-area="" asp-controller="Feedback" asp-action="Index"><i class="fas fa-angle-double-right"></i>Feedback</a></li>
                                        <li><a asp-area="" asp-controller="Qr" asp-action="Index"><i class="fas fa-angle-double-right"></i> QR Code</a></li>
                                        <li><a asp-area="" asp-controller="Qr" asp-action="Roles"><i class="fas fa-angle-double-right"></i> Roles</a></li>
                                        


                                    </ul>
                                </div>
                            }
                                <!-- /Footer Widget -->

                            </div>

                    </div>
                </div>
            </div>
            <!-- /Footer Top -->
            
            

        </footer>
        <!-- /Footer -->

    </div>
    <!-- /Main Wrapper -->
    <!-- jQuery -->
    <script src="~/assets/js/jquery.min.js"></script>

    <!-- Bootstrap Core JS -->
    <script src="~/assets/js/popper.min.js"></script>
    <script src="~/assets/js/bootstrap.min.js"></script>

    <!-- Slick JS -->
    <script src="~/assets/js/slick.js"></script>

    <!-- Custom JS -->
    <script src="~/assets/js/script.js"></script>
            @RenderSection("Scripts", required: false)

</body>

<!-- doccure/  30 Nov 2019 04:11:53 GMT -->
</html>